<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_allMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/allmusic_background"
        android:fitsSystemWindows="true">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="112dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="0dp"
            android:src="@mipmap/allmusic_background" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/txt_allMusicTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="38dp"
        android:text="全部歌曲"
        android:textColor="#EEAD0E"
        android:textSize="36dp" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@+id/toolbar_allMusic"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:src="@mipmap/randomplay_picture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_allMusic"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="17dp"
        android:text="随机播放此歌单" />

    <ImageButton
        android:id="@+id/btn_allMusic_random"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/txt_allMusicTitle"
        android:layout_alignEnd="@+id/txt_allMusicTitle"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="55dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@mipmap/randomplay" />

    <ImageView
        android:id="@+id/line_allMusic"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/btn_allMusic_random"/>

    <ImageButton
        android:id="@+id/btn_allMusic_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="fitXY"
        android:src="@mipmap/backbutton"
        android:background="#00000000"
        android:layout_marginStart="10dp"/>

    <ImageButton
        android:id="@+id/btn_allSearch"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="320dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@mipmap/find" />

    <ListView
        android:id="@+id/list_allMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_allMusic"
        android:layout_marginTop="10dp">
    </ListView>

</RelativeLayout>