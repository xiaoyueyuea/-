<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/item_aboveLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent"
        android:layout_above="@+id/item_image"/>

    <TextView
        android:id="@+id/item_id"
        android:layout_width="30dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_toRightOf="@+id/item_id"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/item_image"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/item_time"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/item_name"
        android:layout_alignBottom="@+id/item_id"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="1dp"/>

    <TextView
        android:id="@+id/item_singer"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_name"
        android:layout_marginStart="120dp"
        android:layout_marginTop="8dp"
        android:textSize="10dp"/>

    <ImageButton
        android:id="@+id/item_option"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_above="@+id/item_time"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="-4dp"
        android:background="#00000000"
        android:src="@mipmap/item_option" />


    <ImageView
        android:id="@+id/item_belowLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/item_image"
        android:layout_marginTop="5dp"/>

</RelativeLayout>