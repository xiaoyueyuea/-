<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/id_musicList"
        android:layout_width="30dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:textSize="24sp"/>

    <ImageView
        android:id="@+id/image_musicList"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toEndOf="@+id/id_musicList"
        android:src="@mipmap/person"/>

    <TextView
        android:id="@+id/text_name_musicList"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toEndOf="@+id/image_musicList"
        android:layout_marginLeft="25dp"
        android:gravity="center"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/text_count_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="55dp"
        android:layout_toEndOf="@+id/text_count_music"
        android:text="é¦–"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/item_home_option"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:background="#00000000"
        android:src="@mipmap/item_option"
        android:onClick="onclick"/>
</RelativeLayout>